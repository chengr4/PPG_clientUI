<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <corners android:radius="3dp" />
                    <solid android:color="@color/colorStartButtonShadow" />
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:startColor="@color/colorStartButtonStart" android:endColor="@color/colorStartButtonEnd"/>
                    <padding android:bottom="5dp" android:left="5dp"
                        android:right="5dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:startColor="@color/colorStartButtonShadow" android:endColor="@color/colorStartButtonShadow"/>
        </shape>
    </item>
</selector>